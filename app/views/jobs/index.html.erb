<div id="job-index">
    <div id="jobs_index_section1">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div id="jobs-index-carousel" class="carousel slide text-center" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#jobs-index-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#jobs-index-carousel" data-slide-to="1"></li>
                            <li data-target="#jobs-index-carousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <h4 id="carousel1">Ruby on Rails 开发工程师 -「名事集团」<br>
                                    <span style="font-style:normal;">18-24万 1年以上工作经验 上海</span></h4>
                            </div>
                            <div class="item">
                                <h4 id="carousel2">软件总监 -「酷比」<br>
                                    <span style="font-style:normal;">45-75万 5年以上工作经验 深圳</span></h4>
                            </div>
                            <div class="item">
                                <h4 id="carousel3">招采主管 - 「国美地产控股有限集团」<br>
                                    <span style="font-style:normal;">12-18万 5年以上工作经验 成都</span></h4>
                            </div>
                        </div>
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#jobs-index-carousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#jobs-index-carousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="job_section">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="service-space">
                    </div>
                    <div class="btn-group pull-middle" role="group" aria-label="..." id="filter-btn">
                        <div class="dropdown btn-group clearfix">
                            <% if params[:category].present? %>
                                <button class="btn btn-success dropdown-toggle"  type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <%= params[:category] %> <span class="caret"></span>
                                </button>
                            <% else %>
                                <button class="btn btn-success dropdown-toggle"  type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    职位类型 <span class="caret"></span>
                                </button>
                            <% end %>
                            <ul class="dropdown-menu ">
                                <li><%= link_to("IT", jobs_path(:category => "IT")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("公益", jobs_path(:category => "公益")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("金融", jobs_path(:category => "金融")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("教育", jobs_path(:category => "教育")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("管理", jobs_path(:category => "管理")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("法律", jobs_path(:category => "法律")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("HR", jobs_path(:category => "HR")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("市场", jobs_path(:category => "市场")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("健康医疗", jobs_path(:category => "健康医疗")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("设计", jobs_path(:category => "设计")) %></li>
                                <li class="divider"></li>
                                <li><%= link_to("所有类型", jobs_path(:category => "所有类型")) %></li>
                            </ul>
                        </div>
                        <div class="dropdown btn-group clearfix"  >
                            <% if params[:order].present? %>
                                <button class="btn btn-success dropdown-toggle"  type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <%= params[:order] %> <span class="caret"></span>
                                </button>
                            <% else %>
                                <button class="btn btn-success dropdown-toggle"   type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    薪资 <span class="caret"></span>
                                </button>
                            <% end %>
                            <ul class="dropdown-menu">
                                <li><%= link_to("薪资上限", jobs_path(:order => "薪资上限"))%></li>
                                <li class="divider"></li>
                                <li><%= link_to("薪资下限", jobs_path(:order => "薪资下限"))%></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9" >
                    <div class="container-fluid">
                        <div class="service-space">
                        </div>
                        <div class="pull-right">
                            <%= link_to(content_tag(:i, "返回", class: "fa fa-arrow-left back-btn"), url_for(:back)) %>
                        </div>
                        <div class="row ">
                            <div class="col-md-12">
                                <h1 class="title service-space">职位列表</h1>
                                <%= render :partial => "job-item", :collection => @jobs, :as => :job %>
                                <div class="text-center service-space-thinner">  <%= will_paginate @jobs, class: "apple_pagination" %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
