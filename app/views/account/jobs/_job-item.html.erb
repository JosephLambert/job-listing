<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <h3 class="panel-title" style="text-decoration:underline;margin-top:12px;">
                    <%= link_to(job.title, job_path(job)) %>
                </h3>
            </div>
            <div class=" col-md-6 exchange_job_state text-right" style="font-size:20px;">
                <ul class="list-inline">
                    <li>
                        <% if current_user && current_user.is_member_of_fav_jobs?(job) %>
                            <%= link_to quitfav_job_path(job), method: :post ,style:"color:#000;" do %>
                                <i class="fa fa-star" aria-hidden="true"></i>
                            <% end %>
                        <% else %>
                            <%= link_to addfav_job_path(job), method: :post ,style:"color:#000;" do %>
                                <i class="fa fa-star-o" aria-hidden="true"></i>
                            <% end %>
                        <% end %>
                    </li>
                    <li>
                        <% if current_user && current_user.applied_jobs.include?(job) %>
                            <span class="label label-success" >已申请</span>
                        <% else %>
                            <span class="label label-default">未申请</span>
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="trix-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <span><i class="fa fa-jpy" aria-hidden="true"></i>: <kbd><%= job.wage_lower_bound%>-<%= job.wage_upper_bound%><kbd></span>
                            </div>
                            <div class="col-md-4">
                                <span><i class="fa fa-flag-checkered" aria-hidden="true"></i>：<%= job.company%></span>
                            </div>
                            <div class="col-md-4">
                                <span><i class="fa fa-map-marker" aria-hidden="true"></i>：<%= job.location%></span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <p><i class="fa fa-clock-o" aria-hidden="true"></i>: <%= job.created_at%></p>
            </div>
        </div>
        <div class="service-space-thinner">
        </div>
