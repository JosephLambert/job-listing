<div id="forget-your-password-id" class="background-pic">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="service-space-wilder">
                </div>
                <h2 class="title service-space">忘记你的密码？</h2>
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs service-space">
                        <%= f.input :email, required: true, autofocus: true %>
                    </div>
                    <div class="form-actions text-center service-space">
                        <%= f.button :submit, "重置密码",class: "btn job-create-btn" %>
                    </div>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
