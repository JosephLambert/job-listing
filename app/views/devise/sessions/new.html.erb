<div id="login-id" class="background-pic">
    <div class="container ">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="service-space-wilder">
                </div>
                <h2 class="title">Log in</h2>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-inputs">
                        <%= f.input :email, required: false, autofocus: true ,label:"邮箱：" %>
                        <%= f.input :password, required: false ,label:"密码："%>
                        <%= f.input :remember_me, label:"记住我？",as: :boolean if devise_mapping.rememberable? %>
                    </div>
                    <div class="form-actions text-center">
                        <%= f.button :submit, "登录" ,class: "btn job-create-btn"%>
                    </div>
                </form>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
</div>
</div>
